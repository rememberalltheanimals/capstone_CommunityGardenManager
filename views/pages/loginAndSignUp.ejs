const main = document.querySelector('main')

const n = document.getElementById('name')
const u = document.getElementById('userName')
const e = document.getElementById('email')
const p = document.getElementById('phoneNumber')
const z = document.getElementById('zipCode')
const gt = document.getElementById('gardenTime')
const pw = document.getElementById('password')
const g = document.getElementById('gardens')

const submitButton = document.getElementById('submitRegister')
    
const subRegister = async function () {


  main.innerHTML = '<h1>Please wait</h1>'

  const name = n.value;
  const username = u.value;
  const email = e.value;
  const phone = p.value;
  const zip = z.value;
  const gardenTime = gt.value;
  const password = pw.value;
  const garden = g.value


  const data = {
    name: name,
    username: username,
    email: email,
    phoneNumber: phone,
    zipCode: zip,
    gardenTime: gardenTime,
    password: password,
    garden: garden
  }

    const response = await fetch('/', {
    method: 'POST',
    headers: {
      Accept: 'application/json',
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(data)
  })

  if (response.ok) {
    const result = await response.json()
    if (result.ok) {
      main.innerHTML = `<h1>Success!</h1>`
      return
    }
  }

  main.innerHTML = '<h1>Server error</h1>'


}
submitButton.addEventListener('click', (e) => subRegister())

